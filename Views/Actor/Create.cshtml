@{
    ViewData["Title"] = "Add Actor";
}

@model MovieApp.Models.Actor

<div>
    <h1 class="display-6">Add Actor</h1>

    <form asp-action="Store" asp-controller="Actor">
        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date"></input>
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BirthCity"></label>
            <input asp-for="BirthCity" class="form-control"></input>
            <span asp-validation-for="BirthCity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BirthCountry"></label>
            <input asp-for="BirthCountry" class="form-control"></input>
            <span asp-validation-for="BirthCountry" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="HeightInInches"></label>
            <input asp-for="HeightInInches" class="form-control" type="number" min="0"></input>
            <span asp-validation-for="HeightInInches" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Biography"></label>
            <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>

          <div class="form-group mb-3">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control form-select">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NetWorth"></label>
            <input asp-for="NetWorth" class="form-control" type="number" min="0"></input>
            <span asp-validation-for="NetWorth" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-full">Submit</button>
    </form>
</div>
