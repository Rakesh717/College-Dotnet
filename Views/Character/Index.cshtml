@{
    ViewData["Title"] = "Character List";
}

@model List<MovieApp.Models.Character>

<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6">Character List</h1>

        <a asp-action="Create" asp-controller="Character">Add Character</a>
    </div>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Character Name</th>
                <th scope="col">Pay</th>
                <th scope="col">Actual Name</th>
                <th scope="col">Movie Name</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="100">
                        <p class="text-center text-sm text-secondary">No characters found.</p>
                    </td>
                </tr>
            }
            
            @foreach (var character in Model)
            {
                <tr>
                    <th scope="row">@character.ID</th>
                    <td>@character.CharacterName</td>
                    <td>@character.Pay</td>
                    <td>@character.Actor.Name</td>
                    <td>@character.Movie.Title</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Character" asp-route-id="@character.ID">Edit</a>
                        <form asp-action="Destroy" asp-controller="Character" asp-route-id="@character.ID" class="d-inline-block ms-2">
                            <button type="submit" class="text-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
