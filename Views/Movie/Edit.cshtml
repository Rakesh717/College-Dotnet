@{
    ViewData["Title"] = "Edit Movie";
}

@model MovieApp.Models.Movie

<div>
    <h1 class="display-6">Edit Movie</h1>

    <form asp-action="Update" asp-controller="Movie" asp-route-id="@Model.ID">
        <div class="form-group mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"></input>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" type="number" min="0" max="10"></input>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

         <div class="form-group mb-3">
            <label asp-for="Budget"></label>
            <input asp-for="Budget" class="form-control" type="number" min="0"></input>
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Gross"></label>
            <input asp-for="Gross" class="form-control" type="number" min="0"></input>
            <span asp-validation-for="Gross" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" class="form-control" type="date"></input>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control"></input>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Runtime"></label>
            <input asp-for="Runtime" class="form-control" type="number" min="0"></input>
            <span asp-validation-for="Runtime" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Summary"></label>
            <textarea asp-for="Summary" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-full">Submit</button>
    </form>
</div>
